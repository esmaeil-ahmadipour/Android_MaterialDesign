<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme" parent="AppTheme.Base">
    </style>
    <style name="ProgressBarTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/secondaryColor</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primaryDarkColor</item>
    </style>
    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">@color/colorGray</item>
        <item name="colorControlActivated">@color/secondaryColor</item>
        <item name="android:textColorHint">@color/colorGray</item>
    </style>
    <style name="ErrorTextAppearanceStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MainTheme" parent="AppTheme">
    </style>
</resources>
